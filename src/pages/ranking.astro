
---
import Header from '../components/Header.astro';

let players = [];

try {
  const res = await fetch('http://localhost:3001/api/ranking');
  if (res.ok) {
    players = await res.json();
  }
} catch (err) {
  console.error("Erro ao buscar ranking:", err);
}
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ranking Geral</title>
  </head>
  <body class="bg-white text-black">
    <Header />

    <main class="max-w-6xl mx-auto p-4">
      <h2 class="text-2xl font-bold text-center my-6">Ranking Geral dos Jogadores</h2>

      <div class="overflow-x-auto">
        <table class="w-full text-sm text-center bg-white border border-gray-300">
          <thead class="bg-gray-100 text-xs font-semibold">
            <tr>
              <th class="px-4 py-2">#</th>
              <th class="px-4 py-2 text-left">PSN</th>
              <th class="px-4 py-2">NAC</th>
              <th class="px-4 py-2">üèÜ</th>
              <th class="px-2 py-2">PTS</th>
              <th class="px-2 py-2">J</th>
              <th class="px-2 py-2">V</th>
              <th class="px-2 py-2">E</th>
              <th class="px-2 py-2">D</th>
              <th class="px-2 py-2">GP</th>
              <th class="px-2 py-2">GC</th>
              <th class="px-2 py-2">SG</th>
            </tr>
          </thead>
          <tbody>
            {
              players.map((player, index) => (
                <tr class="border-t hover:bg-gray-50">
                  <td class="px-2 py-2">{index + 1}</td>
                  <td class="text-left px-4 py-2 font-semibold">{player.psn_id}</td>
                  <td class="px-2 py-2">
                    <img src={player.escudo_url || "/escudos/br.png"} alt={player.nationality} class="w-6 h-4 mx-auto object-contain" />
                  </td>
                  <td class="px-2 py-2">{player.titulos}</td>
                  <td class="px-2 py-2">{player.points}</td>
                  <td class="px-2 py-2">{player.games_played}</td>
                  <td class="px-2 py-2">{player.wins}</td>
                  <td class="px-2 py-2">{player.draws}</td>
                  <td class="px-2 py-2">{player.losses}</td>
                  <td class="px-2 py-2">{player.goals_for}</td>
                  <td class="px-2 py-2">{player.goals_against}</td>
                  <td class="px-2 py-2">{player.goals_for - player.goals_against}</td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
